<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SIGN-IN SCREEN -->
    <LinearLayout android:id="@+id/screen_sign_in" style="@style/SignInScreen">
        <ImageView android:id="@+id/company_logo" style="@style/CompanyTitle"/>
        <TextView style="@style/GameBlurb" />
        <Button android:id="@+id/button_sign_in" style="@style/SignInButton"/>
    </LinearLayout>

    <!-- MAIN SCREEN -->
    <LinearLayout android:id="@+id/screen_main" style="@style/LLScreen">
        <Button android:id="@+id/button_quick_game"
            style="@style/PlayGameButton"
            />

        <Button android:id="@+id/button_sign_out"
            style="@style/SignOutButton" />
    </LinearLayout>

    <!-- "PLEASE WAIT" SCREEN -->
    <LinearLayout android:id="@+id/screen_wait" android:gravity="center" style="@style/LLScreen">
        <TextView style="@style/Blurb" android:text="@string/please_wait" />
    </LinearLayout>

    <!-- GAMEPLAY SCREEN -->
    <LinearLayout android:id="@+id/screen_game" style="@style/LLScreen">
    </LinearLayout>
</FrameLayout>
