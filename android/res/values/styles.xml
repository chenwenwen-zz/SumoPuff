<resources>
    <color name="AccentColor">#cc0000</color>
    <color name="PopupColor">@color/AccentColor</color>
    <color name="PopupTextColor">#ffffff</color>
    <color name="ButtonTextColor">#ffffff</color>
    <color name="BlurbColor">#a0a0a0</color>
    <color name="SignOutButtonBackground">#e0e0e0</color>
    <color name="SignOutButtonTextColor">#404040</color>
    <color name="mainScreenBackground">#ffffff</color>
    <dimen name="TitleSize">30sp</dimen>

    <style name="GdxTheme" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SignInScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/mainScreenBackground</item>
    </style>

    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LLScreen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:background">@drawable/mainscreen</item>
    </style>

    <style name="GameplayScreen" parent="@style/LLScreen">
        <item name="android:gravity">center</item>]
    </style>


    <style name="InvPopup" parent="@style/LLScreen">
        <item name="android:background">@color/PopupColor</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CompanyTitle">
        <item name="android:src">@drawable/companylogo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginLeft">17dp</item>
    </style>

    <style name="GameTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_title</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <!-- Button styles in the game -->

    <style name="SignInButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <!-- <item name="android:layout_marginTop">1dp</item> -->
        <item name="android:background">@drawable/customsignin</item>
    </style>

    <style name="SignOutButton" parent="@style/GameButton">
        <!-- <item name="android:layout_weight">0.5</item> -->
        <item name="android:background">@drawable/customsignout</item>
        <!-- <item name="android:layout_marginTop">5dp</item> -->
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="PlayGameButton">
        <!-- <item name="android:layout_weight">0.5</item> -->
        <item name="android:background">@drawable/customplaygame</item>
        <!-- <item name="android:paddingTop">20dp</item> -->
        <!-- <item name="android:layout_marginTop">20dp</item> -->
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="InviteButton">
        <!-- <item name="android:layout_weight">0.5</item> -->
        <item name="android:background">@drawable/custominvite</item>
        <!-- <item name="android:layout_marginTop">5dp</item> -->
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom</item>
    </style>


    <style name="GameButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <!--<item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>-->
    </style>

    <!-- Button styles end -->

    <style name="MainScreenButton" parent="@style/GameButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/custominvite</item>
    </style>

    <style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="InvPopupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/inv_popup_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InvPopupButton" parent="@style/GameButton">
        <item name="android:background">@color/ButtonTextColor</item>
        <item name="android:textColor">@color/AccentColor</item>
    </style>

    <style name="FigureView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FigureLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Instructions" parent="@style/Blurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="PlacementDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="SectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


</resources>
