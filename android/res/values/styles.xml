<resources>
    <color name="AccentColor">#cc0000</color>
    <color name="ButtonTextColor">#ffffff</color>
    <color name="BlurbColor">#a0a0a0</color>
    <color name="SignOutButtonBackground">#e0e0e0</color>
    <color name="SignOutButtonTextColor">#404040</color>
    <color name="mainScreenBackground">#ffffff</color>
    <dimen name="TitleSize">30sp</dimen>

    <style name="GdxTheme" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SignInScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/mainScreenBackground</item>
    </style>

    <style name="LLScreen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:background">@drawable/mainscreen</item>
    </style>


    <style name="CompanyTitle">
        <item name="android:src">@drawable/companylogo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginLeft">17dp</item>
    </style>>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <!-- Button styles in the game -->

    <style name="SignInButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/customsignin</item>
    </style>

    <style name="SignOutButton" parent="@style/GameButton">
        <item name="android:background">@drawable/customsignout</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="PlayGameButton">
        <item name="android:background">@drawable/customplaygame</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom</item>
    </style>



    <style name="GameButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
    </style>

    <!-- Button styles end -->

</resources>
